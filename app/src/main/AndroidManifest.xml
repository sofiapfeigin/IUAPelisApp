<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iua.sofiaperezfeigin">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".CategoriasActivity"
            android:label="Categorias"
            android:screenOrientation="portrait"/>
        <activity android:name=".FavoritosActivity"
            android:label="Favoritos"
            android:screenOrientation="portrait"/>
        <activity android:name=".EditarUsuarioActivity"
            android:label="Configuracion"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".IniciarSesionActivity"
            android:label="Iniciar Sesion"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CrearCuentaActivity"
            android:label="Crear Cuenta"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MenuPrincipalActivity"
            android:label="Inicio"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".DetallePeliculaActivity"
            android:label="Detalle"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".EnviarEmailActivity"
            android:label="Contacto"
            android:screenOrientation="portrait"/>
    </application>

</manifest>