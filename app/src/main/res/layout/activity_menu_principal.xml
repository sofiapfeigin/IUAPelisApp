<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/w"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IKIPELIS"
            android:textColor="#FFFFFF"
            android:textSize="30dp">

        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">



        <ImageButton
            android:layout_margin="1dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="#272626"
            android:src="@drawable/casa"
            android:tint="@color/colorPrimary"
            android:id="@+id/home"/>

        <ImageButton
            android:layout_margin="1dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="#272626"
            android:src="@drawable/estrella"
            android:tint="@color/colorPrimary"
            android:id="@+id/fav"/>

        <ImageButton
            android:layout_margin="1dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="#272626"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/email__1_"
            android:id="@+id/email"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="1dp"
            android:background="#272626"
            android:tint="@color/colorPrimary"
            app:srcCompat="@drawable/equipo__1_"
            android:id="@+id/editarUsuario"
           />
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="1dp"
            android:background="#272626"
            android:text="ver categorias"
            android:id="@+id/categorias"
            android:textColor="@color/colorPrimary" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/contenedorFragment">

    </FrameLayout>


</LinearLayout>